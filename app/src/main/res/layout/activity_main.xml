<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.design.capstone.agecalculatorpro.MainActivity">


    <Button
        android:id="@+id/dateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_button_shape"
        android:elevation="5dp"
        android:padding="@dimen/button_basic_padding"
        android:text="Set Your Birth Date "
        android:textAllCaps="false"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/birthdayfield"
        android:gravity="center"
        android:text="Your Birth day is "
        android:textSize="20dp"


        />


    <TextView
        android:id="@+id/birthdayfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateButton"
        android:layout_marginBottom="@dimen/button_basic_padding"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textColor="#2C3E50" />

    <TextView
        android:id="@+id/ageTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateButton"
        android:layout_margin="@dimen/button_basic_padding"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F62459" />


</RelativeLayout>
